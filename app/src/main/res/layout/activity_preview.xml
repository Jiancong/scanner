<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@color/colorBkgColor"
        android:layout_weight="5">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img1"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:cropToPadding="true"/>
            <TextView
                android:id="@+id/tv_info"
                android:text=""
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@null"
                android:textColor="#ffffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearlaout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorBkgColor"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_exit"
            android:layout_marginTop="30dp"
            android:text="退出"
            android:textSize="16sp"
            android:background="@color/colorTest1"
            android:textColor="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <Button
            android:id="@+id/btn_setting"
            android:layout_marginTop="20dp"
            android:text="设置"
            android:textSize="16sp"
            android:layout_height="30dp"
            android:background="@color/colorTest2"
            android:textColor="#ffffffff"
            android:layout_below="@id/btn_exit"
            android:layout_width="match_parent"
            />
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/img_upload"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btn_back"
            android:layout_marginBottom="30dp"
            android:text="返回"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>